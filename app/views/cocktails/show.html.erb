<div class="title">
  <h1><%= @cocktail.name.capitalize %></h1>
</div>
<ul class="nav justify-content-end">
  <li class="nav-item">
    <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to "See all cocktails", cocktails_path, class: "nav-link" %>
  </li>
</ul>
<div class="container">
  <h3 class="subtitle">Preparation:</h3>
  <ul class="list-group list-group-flush">
    <% @cocktail_doses.each do |dose| %>
      <li class="list-group-item">
        <div class="card-container">
          <%= dose.description.capitalize %> | <%= dose.ingredient.name %><%= link_to "delete", dose_path(dose), class: "btn-delete-dose" , method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
