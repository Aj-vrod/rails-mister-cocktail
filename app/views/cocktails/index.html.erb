<div class="page-container">
  <div class="container">
    <div class="row justify-content-center">
      <% @cocktails.each do |cocktail| %>
        <div class="col-lg-4 col-md-4 col-sm-3">
          <div class="card rounded">
            <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill, :class => "card-img" %>
            <div class="card-img-overlay">
                <h5 class="card-title"><%= cocktail.name.capitalize %></h5>
                <%= link_to "See more", cocktail_path(cocktail), class: "btn-info-show" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="footer">
    <%= link_to "New Cocktail", new_cocktail_path, class: "btn-footer-index" %>
  </div>
</div>
